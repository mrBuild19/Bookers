<h1>Books</h1>
<table width="600">
	<tr align="center">
		<th>Title</th>
		<th>Body</th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book) %></td>
			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td>Destroy</td>
		</tr>
	<% end %>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<p>Title</p>
	<%= f.text_field :title %>

	<p>Body</p>
	<%= f.text_area :body %>

	<br><%= f.submit 'Create Book' %></br>
<% end %>